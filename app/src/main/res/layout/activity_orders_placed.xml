<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OrdersPlaced">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Here are all of the items you ordered off the menu:"
        android:textSize="50sp"
        />

    <TextView
        android:id="@+id/f1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CP1: #x"
        android:textSize="50sp"
        />
    <TextView
        android:id="@+id/f2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CP2: #x"
        android:textSize="50sp"
        />

    <TextView
        android:id="@+id/f3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BHB: #x"
        android:textSize="50sp"
        />
    <TextView
        android:id="@+id/f4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BLT: #x"
        android:textSize="50sp"
        />
    <TextView
        android:id="@+id/f5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NYSS: #x"
        android:textSize="50sp"
        />
    <TextView
        android:id="@+id/f6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HB: #x"
        android:textSize="50sp"
        />

    <Button
        android:id="@+id/opback"
        android:layout_width="wrap_content"
        android:layout_height="90sp"
            android:text="BACK"
            android:textSize="50sp"
        android:translationX="120sp"
        android:translationY="80sp" />

    <Button
        android:id="@+id/purchase"
        android:layout_width="wrap_content"
        android:layout_height="90sp"
            android:text="PURCHASE"
            android:textSize="50sp"
        android:translationX="50sp"
        android:translationY="100sp" />


</LinearLayout>
